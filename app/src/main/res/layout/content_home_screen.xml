<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:background="#ffffff"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".HomeScreenActivity"
    tools:showIn="@layout/app_bar_home_screen">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="245dp"
            android:elevation="10dp"
            android:id="@+id/cardview_work_space"
            android:divider="@android:color/transparent"
            android:dividerHeight="0.0px"
            android:background="#fcf9f9"
            android:clipToPadding="true"
            card_view:cardBackgroundColor="#ffffff"
            android:clipChildren="true"
            app:cardElevation="10dp"
            app:cardPreventCornerOverlap="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/otlob"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="اطلب الاكل اللي بتحبه من مصر"
                    android:layout_gravity="center"
                    android:textColor="#000"
                    android:textSize="17sp"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginLeft="50dp"
                    android:background="#12bc09"
                    android:text="ابدا الطلب"
                    android:layout_marginTop="22dp"
                    android:textColor="#ffffff"
                    android:textSize="17sp"/>


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="right"
            android:textSize="17sp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="50dp"
            android:textColor="#000"
            android:text="طلباتي السابقة"/>

        <android.support.v7.widget.CardView
            android:layout_width="300dp"
            android:layout_height="175dp"
            android:layout_gravity="center"
            android:elevation="5dp"
            android:layout_marginTop="5dp"
            android:id="@+id/cardview_work_space2"
            android:divider="@android:color/transparent"
            android:dividerHeight="0.0px"
            android:background="#fcf9f9"
            android:clipToPadding="true"
            card_view:cardBackgroundColor="#ffffff"
            android:clipChildren="true"
            app:cardElevation="5dp"
            app:cardPreventCornerOverlap="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="175dp"
                        android:layout_height="75dp"
                        android:layout_gravity="center"
                        android:src="@drawable/image"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="استمتع بتجربة طلب الطعام"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:textColor="#000"
                        android:textSize="17sp"/>

                    <Button
                        android:text="تسجيل الدخول"
                        android:textColor="#12b909"
                        android:textSize="15sp"
                        android:layout_width="150dp"
                        android:layout_height="35dp"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/button_shap"
                        android:shadowColor="#A8A8A8"
                        android:shadowDx="0"
                        android:shadowDy="0"/>

                </LinearLayout>

            </LinearLayout>


        </android.support.v7.widget.CardView>


    </LinearLayout>


</LinearLayout>